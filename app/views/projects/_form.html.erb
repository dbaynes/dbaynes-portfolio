  </div>
  <div class="field">
    <%= f.label :timeframe, "Time Frame" %><br />
    <%= f.text_field :timeframe %>
  </div>
  <div class="field">
    <%= f.label :location, "Location" %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :project_description, "Project Description" %><br />
