<%case params[:portfolio_type].capitalize
	 when  'Education'%>
		<h1>Education</h1>
	 <%when  'Arts'%>
		<h1>Arts</h1>
	 <%when  'Athletics'%>
		<h1>Athletics</h1>
	 <%when  'Recreational'%>
		<h1>Recreational</h1>
	 <%when  'Professional'%>
		<h1>Professional</h1>
	<%else%>
	  <h1>All Projects</h1>
<%end%>
 	<table width="100%">
	  <%if @projects.empty? %>
			<p><b>No <%=params[:portfolio_type].capitalize%> projects created to date.</b></p>
		<%end%>
     <% @projects.each do |p| %>
		 	<tr>
	   	   <td width="25%"><b>Project:</b></td>
		 	 	 <td><%=p.name%></td>
		 	</tr>
		 	<tr>
		 	 	<td><b>Time Frame:</b></td>
		 	 	<td><%=p.timeframe%></td>
		 	</tr>
		 	<tr>
		 	 	<td><b>Locaton:</b></td>
		 	 	<td><%=p.location%></td>
		 	</tr>
		 	<tr>
		 	 	<td><b>Descripton:</b></td>
		 	 	<td><%=p.project_description%></td>
		 	</tr>
		  <tr>
		 	 	<td colspan="2" style="text-align: center"><b><%= link_to 'Click Here to add a Post to this project.', new_post_path(:project=>p,:portfolio_type=>params[:portfolio_type]), :style=>"color:#C31E2D" %></b></td></td>
		 	</tr>
		 	<% @posts = Post.where(:project_id=>p.id)%>
		  	<%if !@posts.nil? && @posts.length > 0 %>
				<tr>
			 	 	<td style="text-align: left"><b>Previous Posts:</b></td>
					<td></td>
			 	</tr>
				<tr>
			 	 	<td style="text-align: center"><b>Title</b></td>
			 	 	<td style="text-align: center"><b>Post</b></td>
			 	</tr>
			  	<tr>
						<%@posts.each do |post| %>
						<td><%=post.title%></td>
						<td><%=post.content%></td>
					</tr>
					<tr>
						<td></td>
						<td><b>Posted By: <%= post.username%></b></td>
					</tr>
					<%end%>	
			<%end %>
		 	
			<%if current_user.email == 'dbaynes@gci.com'%>
	     	 <tr>
	     	   <td><b><%= link_to 'Edit', edit_project_path(p) %></td>
	     	   <td><b><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %></b></td>
	      	</tr>
			<%end%>
    <% end %>
  </tbody>
</table>

	<%if current_user.email == 'dbaynes@gci.com'%>
		<%= link_to "New #{params[:portfolio_type].capitalize} Project", new_project_path(:params => params) %> |
	<%else%>
		<%= link_to "Back to Portfolio Collection", root_path%>
	<%end%>
