<%case params[:portfolio_type].capitalize
	 when  'Education'%>
		<h1>Education</h1>
	 <%when  'Arts'%>
		<h1>Arts</h1>
	 <%when  'Athletics'%>
		<h1>Athletics</h1>
	 <%when  'Recreational'%>
		<h1>Recreational</h1>
	 <%when  'Professional'%>
		<h1>Professional</h1>
	<%else%>
	  <h1>All Projects</h1>
<%end%>
 	<table width="100%">
	  <%if @projects.empty? %>
			<p style="width:100%"><b>No <%=params[:portfolio_type].capitalize%> projects created to date.</b></p>
		<%end%>
     <% @projects.each do |p| %>
		 	<tr>
	   	   <td width="25%"><b style="color:#08088A">Project:</b></td>
		 	 	 <td style="color:#08088A"><%=p.name%></td>
		 	</tr>
		 	<tr>
		 	 	<td><b style="color:#08088A">Time Frame:</b></td>
		 	 	<td style="color:#08088A"><%=p.timeframe%></td>
		 	</tr>
		 	<tr>
		 	 	<td><b style="color:#08088A">Locaton:</b></td>
		 	 	<td style="color:#08088A"><%=p.location%></td>
		 	</tr>
		 	<tr>
		 	 	<td><b style="color:#08088A">Descripton:</b></td>
		 	 	<td style="color:#08088A"><%=p.project_description%></td>
		 	</tr>
		 	<% @posts = Post.where(:project_id=>p.id)%>
		  	<%if !@posts.nil? && @posts.length > 0 %>
						<tr>
			 			 	<td style="text-align: left;"><b style="color:#0B6121">Previous Posts:</b></td>
							<td></td>
			 			</tr>
						<tr>
			 			 	<td style="text-align: center; style=color:#0B6121"><b style="color:#0B6121">Post Title</b></td>
			 			 	<td style="text-align: center; style=color:#0B6121"><b style="color:#0B6121">Content</b></td>
			 			</tr>
			  		<tr>
							<%@posts.each do |post| %>
							<td style="color:#0B6121"><%=post.title%></td>
							<td style="color:#0B6121"><%=post.content%></td>
						</tr>
						<tr>
							<td style="color:#0B6121"><b>Post Status: </b><%= post.status%></td>
							<td style="color:#0B6121"><b>Posted By: <%= post.username%></b></td>
						</tr>
							
						<%if can? :update, Post %>
							<tr>
							  <%=form_for (post) do |f| %>
									<%if post.status == "Published"%>
										<td style="color:#0B6121"><b>Un-Publish?</b>&nbsp;&nbsp;<%= f.check_box :published, :checked_value => "0" %></td>
										<td style="color:#0B6121"><b> <%= button_to "Change to Published", edit_post_path(post,p)%></b></td>
									<%else%>
										<td style="color:#0B6121"><b>Publish?</b>&nbsp;&nbsp;<%= f.check_box :published,:checked_value => "1" %></td>
										<td style="color:#0B6121"><b> <%= button_to "Change to Un-Published", edit_post_path(post,p)%></b></td>
									<%end%>
								<%end%>	
							</tr>
						<%end%>	
				<%end%>
			<%end %>
		 	<%if can? :create, Post %>
				<tr>
		 		 	<td colspan="2" style="text-align: center"><b><%= link_to 'Click Here to add a Post to this project.', new_post_path(:project=>p,:portfolio_type=>params[:portfolio_type]), :style=>"color:#C31E2D" %></b></td></td>
		 		</tr>
		  <%end%>
			<!--%if current_user.email == 'dbaynes@gci.com'%-->
			<% if can? :update, Project %>
	     	 <tr>
	     	   <td><b><%= link_to 'Edit', edit_project_path(p) %></td>
	     	   <td><b><%= link_to 'Delete', p, method: :delete, data: { confirm: 'Are you sure?' } %></b></td>
	      	</tr>
			<%end%>
    <% end %>
  </tbody>
</table>

	<% if can? :create, Project%>
		<%= link_to "New #{params[:portfolio_type].capitalize} Project", new_project_path(:portfolio_type=> "#{params[:portfolio_type]}") %> |
		<%= link_to "Back to Portfolio Collection", root_path%>
	<%else%>
		<%= link_to "Back to Portfolio Collection", root_path%>
	<%end%>
