<h1>Listing portfolios</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
			<tr>
				<th>Portfolio Type</th>
				<th>Description</th>
				<th colspan="3" style="text-align:center">Action</th>
			</tr>
			<tr>
				<td><%=portfolio.portfolio_name%></td>
				<td><%=portfolio.portfolio_description%></td>	
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= button_to 'Create New Portfolio Type', new_portfolio_path, :method=>"get" %></td>
