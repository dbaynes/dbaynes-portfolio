<%case params[:portfolio_type]
	 when  'education'%>
		<h1>Education</h1>
	 <%when  'arts'%>
		<h1>Arts</h1>
	 <%when  'letters'%>
		<h1>Letters</h1>
	 <%when  'athletics'%>
		<h1>Athletics</h1>
	 <%when  'recreational'%>
		<h1>Recreational</h1>
	 <%when  'professional'%>
		<h1>Professional</h1>
	<%else%>
	  <h1>Portfolio</h1>
<%end%>
		

<table>
  <tr>
    <th>Portfolio</th>
    <th>Time Frame</th>
    <th>Location</th>
    <th>Experience</th>
  </tr>

<% @portfolios.each do |portfolio| %>
	<tr>
		<td><%portfolio.portfolio_type%>
		<td><%portfolio.timeframe%>
		<td><%portfolio.location%>
		<td><%portfolio.experience%>
  <tr>
    <td><%= link_to 'Show', portfolio %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
    <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Portfolio', new_portfolio_path, class: "button radius" %>
