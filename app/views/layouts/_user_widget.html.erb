<% if user_signed_in? %>
	<br/>
	<br/>
  <p>Welcome <%= current_user.username %></p>
	<%if !current_user.role.nil? %>
  	<%= link_to "Logged In with email #{current_user.email} in the #{current_user.role.capitalize} role  - [click to logout]", destroy_user_session_path(:logout =>"logout"), :method => :delete %>
	<%else%>
		<%= link_to "Logged In with email #{current_user.email}  - [click to logout]", destroy_user_session_path(:logout =>"logout"), :method => :delete %>
	<%end%>
<%elsif !params[:controller] == 'devise/sessions' && !params[:action] == 'new'%>
		<br/>
  	<p>You are not signed in.</p>
  	<%= link_to 'Login', new_user_session_path %>
<% end %>